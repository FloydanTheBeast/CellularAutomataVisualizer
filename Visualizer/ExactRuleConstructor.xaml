<UserControl x:Class="Visualizer.ExactRuleConstructor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Visualizer"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid Width="300" Height="200">
        <StackPanel Width="250" HorizontalAlignment="Left" Orientation="Horizontal">
            <Canvas Name="NeighborhoodCanvas" Margin="50,0,50,0" Height="150" VerticalAlignment="Center" Width="150"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Canvas Name="NextStateCanvas" Height="50" Width="50" VerticalAlignment="Center"></Canvas>
        </StackPanel>
    </Grid>
</UserControl>
