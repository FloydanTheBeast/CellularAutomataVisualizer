<UserControl x:Class="Visualizer.AutomataCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Visualizer"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="120">
    <Grid Height="60" Width="120">
        <Button Background="#2d3436" Click="VisualizeAutomata" BorderThickness="0"
                FontWeight="Light" FontSize="12" Foreground="#fff">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Button.Resources>
            <TextBlock Name="AutomataNameText" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Button>
    </Grid>
</UserControl>
