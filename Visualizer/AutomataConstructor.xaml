<Page x:Class="Visualizer.AutomataConstructor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:uc="clr-namespace:Visualizer"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="AutomataConstructor">

    <Grid>
        <ScrollViewer HorizontalAlignment="Left" Height="720" VerticalAlignment="Top" Width="1280">
            <StackPanel>
                <StackPanel Height="100" VerticalAlignment="Top" Orientation="Horizontal">
                    <RadioButton IsChecked="{Binding Path=IsInfinite, Mode=OneWayToSource}" Content="Конечное" Margin="50,0,0,0" VerticalAlignment="Center"
                                 FontSize="20" VerticalContentAlignment="Center" GroupName="FieldType"/>
                    <RadioButton IsChecked="True" Content="Бесконечное" Margin="50,0,0,0" VerticalAlignment="Center"
                                 FontSize="20" VerticalContentAlignment="Center" GroupName="FieldType"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Top" Height="Auto">
                    <uc:NeighborhoodPicker x:Name="NeighborhoodPicker" />
                </StackPanel>
                <StackPanel>
                    <uc:RuleSetConstructor x:Name="RuleSetConstructor" Tag="{Binding ElementName=NeighborhoodPicker, Path=SelectedNeighborhood, Mode=OneWay}" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
