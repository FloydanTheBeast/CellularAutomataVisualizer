<UserControl x:Class="Visualizer.RuleSetConstructor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Visualizer"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="800" Orientation="Horizontal">
            <ComboBox Name="RuleTypePicker" Width="150" VerticalAlignment="Center" Height="24" Margin="20,0,0,0">
                <ComboBoxItem Tag="ExactPattern">Exact pattern</ComboBoxItem>
                <ComboBoxItem Tag="NearbyNeighbors">Nearby neighbors</ComboBoxItem>
            </ComboBox>
            <Button Content="Add new rule" Width="100" Height="24" Margin="8" Click="CreateRuleBtnClick"/>
        </StackPanel>

        <ListView Name="RuleListView" HorizontalAlignment="Left" Height="auto" VerticalAlignment="Top" Width="650" Margin="20,60,0,0">
        </ListView>
    </Grid>
</UserControl>
